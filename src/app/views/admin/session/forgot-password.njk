{% extends "admin/layout.njk" %}

{% block title %} <title>Esqueci minha senha</title> {% endblock %}

{% block content %}
  <div class="app">
    <form action="/admin/forgot-password" method="POST">

      <div class="head-login">
        <div>
          <img src="/logo.png" alt="">
        </div>
        <div class="title">
          <h1>Esqueceu a senha?</h1>
        </div>
      </div>

      <div class="fields">
        <div class="register-fields user-fields login-container">
       
          <div class="field">
            <p>Email</p>
            <input 
              type="text" 
              name="email"
              value="{{user.email}}"
              placeholder="Digite seu email para recuperar sua senha"
              {# required #}
              onblur="Validate.apply(this, 'validEmail')"
            >
          </div>

          <div class="login-footer forgot-footer">
            <button class="button" type="submit">Recuperar</button>
          </div>
        </div>
      </div>
    </form>
  </div>
{% endblock %}

{% block script %}
  <script src="/scripts/hideNav.js"></script>
{% endblock %}