{% extends "admin/layout.njk" %}

{% block title %} <title>Login</title> {% endblock %}

{% block content %}
  <div class="app">
    <form action="/admin/password-change" method="POST">

      <div class="head-login">
        <div>
          <a href="/">
            <img src="/logo.png" alt="">
          </a>
        </div>
        <div class="title">
          <h1>Trocar senha</h1>
        </div>
      </div>

      <div class="fields">
        <div class="register-fields user-fields login-container">
          
          <div class="field">
            <p>Digite sua senha antiga</p>
            <input 
              type="password" 
              name="password" 
              placeholder="Digite sua senha antiga"
              {# required #}
            >
          </div>

          <div class="field">
            <p>Digite nova senha</p>
            <input 
              type="password" 
              name="newPassword" 
              placeholder="Digite nova senha"
              {# required #}
            >
          </div>

          <div class="field">
            <p>Repetir nova senha</p>
            <input 
              type="password" 
              name="passwordRepeat" 
              placeholder="Repetir nova senha"
              {# required #}
            >
          </div>

          <div class="login-footer forgot-footer">
            <button class="button" type="submit">Nova senha</button>
          </div>
        </div>
      </div>
    </form>
  </div>
{% endblock %}

{% block script %}
  <script src="/scripts/hideNav.js"></script>
{% endblock %}