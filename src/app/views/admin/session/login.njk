{% extends "admin/layout.njk" %}

{% block title %} <title>Login</title> {% endblock %}

{% block content %}
  <div class="app">
    <form action="/admin/login" method="POST">

      <div class="head-login">
        <div>
          <img src="/logo.png" alt="">
        </div>
        <div class="title">
          <h1>Iniciar Sess√£o</h1>
        </div>
      </div>

      <div class="fields">
        <div class="register-fields user-fields login-container">
       
          <div class="field">
            <p>Email</p>
            <input 
              type="text" 
              name="email"
              value="{{user.email}}"
              placeholder="Digite seu email"
              {# required #}
              onblur="Validate.apply(this, 'validEmail')"
            >
          </div>
          
          <div class="field">
            <p>Senha</p>
            <input 
              type="password" 
              name="password" 
              placeholder="Digite sua senha"
              {# required #}
            >
          </div>

          <div class="login-footer">
            <a href="/forgot-password">Perdeu a senha?</a>
            <button class="button" type="submit">Acessar</button>
          </div>
        </div>
      </div>
    </form>
  </div>
{% endblock %}

{% block script %}
  <script src="/scripts/hideNav.js"></script>
{% endblock %}