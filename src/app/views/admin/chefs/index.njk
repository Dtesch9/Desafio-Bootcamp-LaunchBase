{% extends "admin/layout.njk" %}

{% block title %} <title>Gerenciador de chefs</title> {% endblock %}

{% block content%}

  <div class="app">
    <div class="head-create">
      {% if session.is_admin == true %}

        <div>
          <h1>Gerenciar chefs</h1>
        </div>

        <div class="create-button">
          <a href="/admin/chefs/create">Criar</a>
        </div>

      {% else %}

        <div>
          <h1>Chefs</h1>
        </div>

      {% endif %}
    </div>

    <div class="chefs-container">

      {% for chef in chefs %}
        <div class="chef">
          <img src="{{chef.image if chef.image else 'http://placehold.it/500x500?text=SEM-IMAGEM'}}" alt="{{chef.name}}">
          <div class="chef-info">
            <p>{{chef.name}}</p>
            <a href="/admin/chefs/{{chef.id}}">Visualizar</a>
          </div>
        </div>
      {% endfor %}
      
    </div>

  </div>

{% endblock %}