{% extends "home/layout.njk" %}

{% block title %} <title>Foodfy</title> {% endblock %}

{% block content %}

  <div class="app">
    <div class="billboard">
      <div class="head">
        <h2>As melhores receitas</h2>
        <p>Aprenda a construir os melhores pratos
        com receitas criadas por profissionais
        do mundo inteiro.</p>
      </div>
      <img src="/chef.png" alt="">
    </div>
    <section>
      <h2>Mais acessadas</h2>
      <div class="cards">
      {% for recipe in recipes %}
        <div class="card">
          <img src="{{recipe.image if recipe.image else 'http://placehold.it/500x500?text=SEM-IMAGEM'}}" alt="">
          <h6>{{recipe.title}}</h6>
          <p>{{recipe.author}}</p>
        </div>
      {% endfor %}
    </section>
  </div>

{% endblock %}