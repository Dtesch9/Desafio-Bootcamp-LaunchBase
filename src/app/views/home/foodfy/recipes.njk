{% extends "home/layout.njk" %}

{% block title %} <title>Receitas</title> {% endblock %}

{% block content %}

  <div class="app">
    <section>
      <div class="cards">
        {% for item in items %}
          <div class="card recipe-pointer" id="{{item.id}}">
            <img src="{{item.image}}" alt="{{item.title}}">
            <h6>{{item.title}}</h6>
            <p>{{item.author}}</p>
          </div>
        {% endfor %}
      </div>
    </section>
  </div>

{% endblock %}

{% block script %}
  <script src="/scripts/recipesInfo.js"></script>
{% endblock %}